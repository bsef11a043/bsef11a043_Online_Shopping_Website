@{
    ViewBag.Title = "index";
    Layout = "Layout.cshtml";
}
<h2>Welcome to Online Shopping Site</h2>

<br /><br />
@foreach (var x in Model)
{
    <div class="product_box margin_r35">
        <h3>@x.productName</h3>
        <div class="image_wrapper"> <img src="@x.imagepath.Substring(1)" alt="" width="190" height="150"/> </div>
        <p class="price">Price: @x.price</p>
        <p>Comapany Name: @x.companyName</p> 
        <a href="/Admin/update?id=@x.Id">Update Info</a> 

</div>
}