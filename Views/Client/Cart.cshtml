@{
    ViewBag.Title = "Cart";
    Layout = "Layout.cshtml";
}
@model List<OnlineShoppingWebsite.Models.Product>
<table border="1">
    <tr>
        <td><h3><b>Product Name</b></h3></td><td><h3><b>Price</b></h3></td><td><h3><b>Quantity</b></h3></td>
    </tr>
    @foreach (var q in Model)
    {
        <tr>
            <td>
                <p>@q.productName</p>
            </td>
             <td>
                <p> @q.price</p>
            </td>
            <td>
                <p>@q.quantity</p>
            </td>
           @*<td><input type="button" onclick=</td>*@
        </tr>
    }
    <tr>
        <td>Total=@ViewBag.total</td>
    </tr>
</table>

<a href="/Client/buy" id="submit_btn">Buy Now</a>

