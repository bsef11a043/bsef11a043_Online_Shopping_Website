@{
    ViewBag.Title = "Cloth";
}

@{
    Layout = "Layout.cshtml";
}
@model List<OnlineShoppingWebsite.Models.Product>
@*<h2>@Model.ElementAt(1).category</h2>*@
@foreach(var x in Model)
{
<div class="product_box margin_r35">
        <h3>@x.productName</h3>
        <div class="image_wrapper"> <img src="@x.imagepath.Substring(1)" alt="" /> </div>
        <p class="price">Price: @x.price</p>
        <p>Comapany Name: @x.companyName</p> @*| <a href="/Home/Cart">Add To Cart</a>*@

</div>
}